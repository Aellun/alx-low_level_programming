CC := gcc
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school

CFLAGS := -Wall -Werror -Wextra -pedantic


all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@ $(CFLAGS)

-include m.h

$(OBJ): %.o: %.c
	$(CC) -c $< -o $@ $(CFLAGS)

clean:
	-$(RM) *~ $(NAME)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean
	-$(RM) $(NAME)

re: fclean all
